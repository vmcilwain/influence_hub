<% content_for :title, "Editing campaign" %>

<h1>Editing campaign</h1>

  <% if @campaign.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
        <% @campaign.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: @campaign) do |form| %>
  <%= render "new_form_fields", form: form %>

  <div>
    <%= form.label :engagement_rate, style: "display: block" %>
    <%= form.text_field :engagement_rate %>
  </div>

  <div>
    <%= form.label :reach, style: "display: block" %>
    <%= form.text_field :reach %>
  </div>

  <div>
    <%= form.label :clicks, style: "display: block" %>
    <%= form.text_field :clicks %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this campaign", @campaign %> |
  <%= link_to "Back to campaigns", campaigns_path %>
</div>

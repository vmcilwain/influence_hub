
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <fieldset>
    <%= f.label :first_name, 'First Name' %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </fieldset>

  <fieldset>
    <%= f.label :last_name, 'Last Name' %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </fieldset>
  
  <fieldset>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </fieldset>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <fieldset>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "leave blank NOT changing" %>
    <% if @minimum_password_length %>
      <br />
      <p class="mute"><%= @minimum_password_length %> characters minimum</p>
    <% end %>
  </fieldset>

  <fieldset>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </fieldset>

  <fieldset>
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
     <p class="mute">Confirm your changes</p>
  </fieldset>

  <div class="actions">
    <%= f.submit "Update", class: :primary %>
    <%= link_to "Back", :back, class: :secondary %>
  </div>
  
  <h3>Cancel my account</h3>

  <div class="actions">
    Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: :secondary, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
  </div>
<% end %>


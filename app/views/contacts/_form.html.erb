<%= form_with model: [@organization, @contact], data: { turbo: false } do |f| %>
  <fieldset class="form-group">
    <div class="form-row">
      <%= f.label :first_name, "First Name", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= f.label :last_name, "Last Name", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= f.label :suffix, class: "form-label" %>
      <%= f.select :suffix,
      ["Jr.", "Sr.", "II", "III", "IV", "Esq.", "Ph.D", "M.D.", "J.D"], 
      { include_blank: true }, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input" %>
    </div>

    <div class="form-row">
      <%= f.label :phone, class: "form-label" %>
      <%= f.phone_field :phone, class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit class: :primary %>
      <%= cancel_contact_link(@contact) %>
    </div>
  </fieldset>
<% end %>
